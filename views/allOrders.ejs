<%- include('layouts/header'); -%>
<body class="body">
    <%- include('layouts/nav'); -%>

    <h3>List of orders</h3>
    <table class="allOrders">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Purchases</th>                      
                <th>Tax</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% for (var order of orders) { %>
                <tr>
                    <td><%= order.name %></td>
                    <td><%= order.phone %></td>
                    <td>
                        <table class="allOrder">
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Sub Total</th>
                            </tr>
                            <% for (var item of order.purchasedItems) { %>
                                <% if (item.prdQuantity1 > 0) { %>
                                <tr>
                                    <td><%= item.prdct1 %></td>
                                    <td><%= item.prdQuantity1 %></td>
                                    <td><%= item.unitPrice1 %></td>
                                    <td>$<%= item.total1 %></td>
                                </tr>
                                <% } %>
                                <% if (item.prdQuantity2 > 0) { %>
                                <tr>
                                    <td><%= item.prdct2 %></td>
                                    <td><%= item.prdQuantity2 %></td>
                                    <td><%= item.unitPrice2 %></td>
                                    <td>$<%= item.total2 %></td>
                                </tr>
                                <% } %>
                                <% if (item.prdQuantity3 > 0) { %>
                                    <tr>
                                        <td><%= item.prdct3 %></td>
                                        <td><%= item.prdQuantity3 %></td>
                                        <td><%= item.unitPrice3 %></td>
                                        <td>$<%= item.total3 %></td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </table>
                    </td>
                    <td>$<%= order.tax %></td>
                    <td>$<%= order.totalAfterTax %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
</body>
<%- include('layouts/footer'); -%>